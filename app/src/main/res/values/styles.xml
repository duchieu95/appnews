<resources>

    <style name="MyTheme" parent="MyTheme.Base">

    </style>

    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/appcolor</item>
        <item name="colorPrimaryDark">@color/appcolor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/bg</item>
        <item name="android:textSize">20dp</item>
        <item name="colorAccent">@color/bg</item>
        <item name="colorControlNormal">@color/bg</item>
        <item name="colorControlActivated">@color/bg</item>
    </style>


</resources>

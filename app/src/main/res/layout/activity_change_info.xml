<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.store4life.Activity.ChangeInfo_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="230dp"
            android:layout_height="129dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgUSER"
                android:layout_width="126dp"
                android:layout_gravity="center"
                android:src="@drawable/icons_user"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:layout_height="106dp" />

            <Button
                android:id="@+id/btnDoiHinh"
                android:text="Đổi Hình"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:background="@drawable/custom_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /></LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_usermana"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/etTen"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:hint="Họ Tên"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:src="@drawable/mail"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center" />
                <EditText
                    android:id="@+id/etMail"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:src="@drawable/icon_pass"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center" />
                <EditText
                    android:id="@+id/etMK"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:hint="Mật Khẩu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:src="@drawable/icon_phone16"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center" />
                <EditText
                    android:id="@+id/etSDT"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:hint="Số Điện Thoại"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageView
                    android:src="@drawable/icon_adress"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center" />
                <EditText
                    android:id="@+id/etDiaChi"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:hint="Địa Chỉ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <ImageView
                        android:src="@drawable/gioitinh_icon"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center" />

                    <RadioGroup
                        android:id="@+id/rb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbNu"
                            android:text="Nữ"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/rbNam"
                            android:text="Nam"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:text="Thay Đổi Thông Tin"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:background="@drawable/custom_buttom"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/btChange" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>